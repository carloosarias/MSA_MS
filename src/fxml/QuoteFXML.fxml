<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root_hbox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.QuoteFX">
   <children>
      <VBox>
         <children>
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <Label text="Número de Parte:">
                           <VBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </VBox.margin>
                        </Label>
                        <ComboBox fx:id="part_combo" prefWidth="150.0" promptText="Número de Parte">
                           <VBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Label text="Revisión:">
                           <VBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </VBox.margin>
                        </Label>
                        <ComboBox fx:id="partrev_combo" prefWidth="150.0" promptText="Revisión">
                           <VBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Button fx:id="add_quote" mnemonicParsing="false" prefWidth="110.0" text="Nueva Cotización">
                           <VBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <HBox>
                           <children>
                              <VBox>
                                 <children>
                                    <TabPane tabClosingPolicy="UNAVAILABLE">
                                      <tabs>
                                        <Tab text="Aprovado">
                                             <content>
                                                <TableView fx:id="approved_tableview">
                                                  <columns>
                                                    <TableColumn prefWidth="75.0" text="No. ID" />
                                                    <TableColumn prefWidth="100.0" text="Fecha" />
                                                      <TableColumn prefWidth="100.0" text="Contacto" />
                                                      <TableColumn prefWidth="100.0" text="Precio Pieza" />
                                                      <TableColumn prefWidth="150.0" text="Comentarios" />
                                                      <TableColumn prefWidth="75.0" text="Estado" />
                                                  </columns>
                                                </TableView>
                                             </content>
                                        </Tab>
                                        <Tab text="Rechazado">
                                             <content>
                                                <TableView fx:id="rejected_tableview">
                                                   <columns>
                                                      <TableColumn prefWidth="75.0" text="No. ID" />
                                                      <TableColumn prefWidth="100.0" text="Fecha" />
                                                      <TableColumn prefWidth="100.0" text="Contacto" />
                                                      <TableColumn prefWidth="100.0" text="Precio Pieza" />
                                                      <TableColumn prefWidth="150.0" text="Comentarios" />
                                                      <TableColumn prefWidth="75.0" text="Estado" />
                                                   </columns>
                                                </TableView>
                                             </content></Tab>
                                          <Tab text="Pendientes">
                                             <content>
                                                <TableView fx:id="pending_tableview">
                                                   <columns>
                                                      <TableColumn prefWidth="75.0" text="No. ID" />
                                                      <TableColumn prefWidth="100.0" text="Fecha" />
                                                      <TableColumn prefWidth="100.0" text="Contacto" />
                                                      <TableColumn prefWidth="100.0" text="Precio Pieza" />
                                                      <TableColumn prefWidth="150.0" text="Comentarios" />
                                                      <TableColumn prefWidth="75.0" text="Estado" />
                                                   </columns>
                                                </TableView>
                                             </content>
                                          </Tab>
                                      </tabs>
                                       <VBox.margin>
                                          <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                       </VBox.margin>
                                    </TabPane>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
