<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root_hbox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProductSupplierFX">
   <children>
      <VBox alignment="CENTER">
         <children>
            <TableView fx:id="productsupplier_tableview" editable="true">
              <columns>
                <TableColumn prefWidth="-1.0" resizable="false" text="Producto">
                     <columns>
                        <TableColumn fx:id="id_column" prefWidth="75.0" resizable="false" text="ID" />
                        <TableColumn fx:id="description_column" prefWidth="200.0" resizable="false" text="Descripción" />
                     </columns>
                  </TableColumn>
                <TableColumn prefWidth="346.0" resizable="false" text="Cotización">
                     <columns>
                        <TableColumn fx:id="supplier_column" prefWidth="100.0" resizable="false" text="Proveedor" />
                        <TableColumn fx:id="quantity_column" prefWidth="100.0" resizable="false" text="Presentación" />
                        <TableColumn fx:id="unitmeasure_column" prefWidth="120.0" resizable="false" text="Unidad de Medida" />
                        <TableColumn fx:id="unitmeasureprice_column" prefWidth="100.0" text="Valor Unitario" />
                        <TableColumn fx:id="unitprice_column" prefWidth="150.0" resizable="false" sortable="false" text="Precio Cotizado" />
                     </columns>
                  </TableColumn>
              </columns>
               <VBox.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Button fx:id="delete_button" disable="true" mnemonicParsing="false" text="Eliminar Selección">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="add_button" mnemonicParsing="false" text="Nueva Cotización">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
                  <Separator orientation="VERTICAL">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Separator>
                  <Button fx:id="addtocart_button" disable="true" mnemonicParsing="false" text="Agregar a Orden de Compra">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
