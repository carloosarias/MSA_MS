<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="root_gridpane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProductSupplierFX">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <GridPane GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="0.0" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="0.0" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="0.0" />
            <ColumnConstraints hgrow="SOMETIMES" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="add_button" mnemonicParsing="false" text="Nueva Cotización">
               <GridPane.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </GridPane.margin>
            </Button>
            <Button fx:id="addtocart_button" disable="true" mnemonicParsing="false" text="Agregar a Carrito de Compra" GridPane.columnIndex="3">
               <GridPane.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </GridPane.margin></Button>
            <Separator orientation="VERTICAL" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </GridPane.margin></Separator>
            <Button fx:id="delete_button" disable="true" mnemonicParsing="false" text="Eliminar Selección" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </GridPane.margin>
            </Button>
         </children>
      </GridPane>
      <TableView fx:id="productsupplier_tableview" editable="true" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="description_column" minWidth="-Infinity" prefWidth="200.0" text="Descripción" />
            <TableColumn fx:id="serialnumber_column" minWidth="-Infinity" prefWidth="150.0" text="Número de Serie" />
            <TableColumn fx:id="supplier_column" minWidth="-Infinity" prefWidth="220.0" text="Proveedor" />
            <TableColumn minWidth="-Infinity" prefWidth="-1.0" text="Cotización">
               <columns>
                  <TableColumn fx:id="quantity_column" minWidth="-Infinity" prefWidth="-1.0" text="Presentación">
                     <columns>
                        <TableColumn fx:id="quantity_column" minWidth="-Infinity" prefWidth="40.0" />
                        <TableColumn fx:id="unitmeasure_column" minWidth="-Infinity" prefWidth="75.0" />
                     </columns>
                  </TableColumn>
                  <TableColumn fx:id="unitmeasureprice_column" minWidth="-Infinity" prefWidth="100.0" text="Valor Unitario" />
                  <TableColumn fx:id="unitprice_column" minWidth="-Infinity" prefWidth="150.0" text="Precio Cotizado" />
               </columns>
            </TableColumn>
         </columns>
         <GridPane.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </GridPane.margin>
      </TableView>
   </children>
</GridPane>
