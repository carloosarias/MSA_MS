<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root_hbox" alignment="CENTER" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DepartReportFX">
   <children>
      <VBox alignment="CENTER">
         <children>
            <TabPane tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab text="Historial Remisiones">
                     <content>
                        <VBox>
                           <children>
                              <TableView fx:id="depart_report_tableview" prefHeight="500.0">
                                 <columns>
                                    <TableColumn fx:id="report_id_column" prefWidth="99.0" text="# ID" />
                                    <TableColumn fx:id="report_employee_column" prefWidth="166.0" text="Empleado" />
                                    <TableColumn fx:id="report_date_column" prefWidth="123.0" text="Fecha de Reporte" />
                                    <TableColumn fx:id="report_client_column" prefWidth="133.0" text="Cliente" />
                                    <TableColumn fx:id="address_column" prefWidth="340.0" text="Dirección (Cliente)" />
                                 </columns>
                                 <VBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </VBox.margin>
                              </TableView>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab text="Detalles de Selección">
                     <content>
                        <HBox>
                           <children>
                              <TableView fx:id="partrevision_tableview">
                                 <columns>
                                    <TableColumn fx:id="part_column" prefWidth="100.0" resizable="false" text="# Parte" />
                                    <TableColumn fx:id="revision_column" prefWidth="100.0" resizable="false" text="Revision" />
                                    <TableColumn prefWidth="75.0" resizable="false" text="Cantidad">
                                       <columns>
                                          <TableColumn fx:id="item_qty_column" prefWidth="75.0" resizable="false" text="Piezas" />
                                          <TableColumn fx:id="item_boxqty_column" prefWidth="75.0" resizable="false" text="Cajas" />
                                       </columns>
                                    </TableColumn>
                                 </columns>
                                 <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </HBox.margin>
                              </TableView>
                              <TableView fx:id="departlot_tableview">
                                 <columns>
                                    <TableColumn fx:id="lot_column" prefWidth="100.0" resizable="false" text="# Lote" />
                                    <TableColumn prefWidth="75.0" resizable="false" text="Cantidad">
                                       <columns>
                                          <TableColumn fx:id="lot_qty" prefWidth="75.0" resizable="false" text="Piezas" />
                                          <TableColumn fx:id="lot_boxqty_column" prefWidth="75.0" resizable="false" text="Cajas" />
                                       </columns>
                                    </TableColumn>
                                    <TableColumn fx:id="lot_process_column" prefWidth="100.0" resizable="false" text="Proceso" />
                                    <TableColumn fx:id="lot_comments_column" prefWidth="150.0" resizable="false" text="Comentarios" />
                                 </columns>
                                 <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </HBox.margin>
                              </TableView>
                           </children>
                        </HBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
            <HBox>
               <children>
                  <Button fx:id="add_button" mnemonicParsing="false" text="Nueva Remisión">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
