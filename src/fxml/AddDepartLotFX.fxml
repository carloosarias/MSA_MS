      </TextField>
      <Label text="Número de Parte:" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </GridPane.margin>
      </Label>
      <ComboBox fx:id="part_combo" editable="true" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
