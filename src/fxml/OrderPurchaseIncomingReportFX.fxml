<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root_hbox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OrderPurchaseIncomingReportFX">
   <children>
      <VBox alignment="TOP_CENTER">
         <children>
            <TabPane tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab text="Historial Reporte Reciba de Orden de Compra">
                     <content>
                        <VBox>
                           <children>
                              <TableView fx:id="orderpurchaseincomingreport_tableview">
                                <columns>
                                  <TableColumn fx:id="orderpurchaseincomingreportid_column" prefWidth="100.0" resizable="false" text="# de Reporte" />
                                  <TableColumn fx:id="orderpurchaseid_column" prefWidth="100.0" resizable="false" text="# de Orden" />
                                    <TableColumn fx:id="company_column" prefWidth="100.0" resizable="false" text="Proveedor" />
                                    <TableColumn fx:id="reportdate_column" prefWidth="120.0" resizable="false" text="Fecha de Reporte" />
                                    <TableColumn prefWidth="75.0" resizable="false" text="Empleado">
                                       <columns>
                                          <TableColumn fx:id="employeeid_column" prefWidth="75.0" resizable="false" text="# de ID" />
                                          <TableColumn fx:id="employeename_column" prefWidth="100.0" resizable="false" text="Nombre" />
                                       </columns>
                                    </TableColumn>
                                    <TableColumn fx:id="comments_column" prefWidth="190.0" resizable="false" text="Comentarios" />
                                </columns>
                                 <VBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </VBox.margin>
                              </TableView>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab text="Detalles de Selección">
                     <content>
                        <VBox>
                           <children>
                              <TableView fx:id="orderpurchaseincomingitem_tableview">
                                 <columns>
                                    <TableColumn prefWidth="75.0" resizable="false" text="Producto">
                                       <columns>
                                          <TableColumn fx:id="productid_column" prefWidth="75.0" resizable="false" text="ID" />
                                          <TableColumn fx:id="description_column" prefWidth="200.0" resizable="false" text="Descripción" />
                                       </columns>
                                    </TableColumn>
                                    <TableColumn prefWidth="100.0" resizable="false" text="Presentación">
                                       <columns>
                                          <TableColumn fx:id="quantity_column" prefWidth="150.0" resizable="false" text="Cantidad" />
                                          <TableColumn fx:id="unitmeasure_column" prefWidth="120.0" resizable="false" text="Unidad de Medida" />
                                       </columns>
                                    </TableColumn>
                                    <TableColumn fx:id="unitsordered_column" prefWidth="120.0" resizable="false" text="Cantidad Ordenada" />
                                    <TableColumn fx:id="unitsarrived_column" prefWidth="120.0" resizable="false" text="Cantidad Recibida" />
                                 </columns>
                                 <VBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </VBox.margin>
                              </TableView>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="add_button" mnemonicParsing="false" text="Nuevo Reporte de Reciba">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children></VBox>
   </children>
</HBox>
