<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Empleados">
               <content>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <TableView GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                          <columns>
                            <TableColumn minWidth="-Infinity" prefWidth="100.0" text="Nombre" />
                              <TableColumn minWidth="-Infinity" prefWidth="100.0" text="Apellido" />
                              <TableColumn minWidth="-Infinity" prefWidth="120.0" text="F. Nacimiento" />
                              <TableColumn minWidth="-Infinity" prefWidth="120.0" text="CURP" />
                              <TableColumn minWidth="-Infinity" prefWidth="280.0" text="Dirección" />
                              <TableColumn minWidth="-Infinity" prefWidth="120.0" text="Teléfono" />
                          </columns>
                           <GridPane.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </GridPane.margin>
                        </TableView>
                     </children>
                  </GridPane>
               </content>
            </Tab>
            <Tab text="Horarios">
               <content>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <TableView>
                          <columns>
                            <TableColumn minWidth="-Infinity" prefWidth="200.0" text="Empleado" />
                              <TableColumn minWidth="-Infinity" prefWidth="120.0" text="F. Contratación" />
                            <TableColumn minWidth="-1.0" prefWidth="-1.0" text="Horario de Trabajo">
                                 <columns>
                                    <TableColumn minWidth="-Infinity" prefWidth="100.0" text="Entrada" />
                                    <TableColumn minWidth="-Infinity" prefWidth="100.0" text="Salida" />
                                    <TableColumn minWidth="-Infinity" prefWidth="45.0" text="L" />
                                    <TableColumn minWidth="-Infinity" prefWidth="45.0" text="M" />
                                    <TableColumn minWidth="-Infinity" prefWidth="45.0" text="M" />
                                    <TableColumn minWidth="-Infinity" prefWidth="50.0" text="J" />
                                    <TableColumn minWidth="-Infinity" prefWidth="45.0" text="V" />
                                    <TableColumn minWidth="-Infinity" prefWidth="45.0" text="S" />
                                    <TableColumn minWidth="-Infinity" prefWidth="45.0" text="D" />
                                 </columns>
                              </TableColumn>
                          </columns>
                           <GridPane.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </GridPane.margin>
                        </TableView>
                     </children>
                  </GridPane>
               </content>
            </Tab>
            <Tab text="Usuarios">
               <content>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <SplitPane dividerPositions="0.65">
                           <items>
                              <TableView>
                                <columns>
                                  <TableColumn minWidth="-Infinity" prefWidth="200.0" text="Empleado" />
                                  <TableColumn minWidth="-Infinity" prefWidth="150.0" text="Nombre de Usuario" />
                                    <TableColumn prefWidth="75.0" text="Administrador" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                              <TableView>
                                <columns>
                                  <TableColumn prefWidth="75.0" text="Módulos" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </items>
                           <GridPane.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </GridPane.margin>
                        </SplitPane>
                     </children>
                  </GridPane>
               </content>
            </Tab>
        </tabs>
         <GridPane.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </GridPane.margin>
      </TabPane>
   </children>
</GridPane>
