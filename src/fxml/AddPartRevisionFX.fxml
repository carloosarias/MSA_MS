                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </ComboBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Metal Base:">
                     <VBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="metal_combo" prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </ComboBox>
               </children>
            </VBox>
            <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT">
               <children>
                  <Button fx:id="save_button" mnemonicParsing="false" text="Registrar Revisión">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
