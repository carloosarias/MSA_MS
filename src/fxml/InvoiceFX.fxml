<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root_hbox" alignment="CENTER" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.InvoiceFX">
   <children>
      <VBox alignment="CENTER">
         <children>
            <TabPane tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab text="Historial de Facturas">
                     <content>
                        <HBox alignment="CENTER">
                           <children>
                              <TableView fx:id="invoice_tableview" prefWidth="937.0">
                                 <columns>
                                    <TableColumn fx:id="id_column" prefWidth="99.0" resizable="false" text="No. de Folio" />
                                    <TableColumn fx:id="invoicedate_column" prefWidth="131.0" resizable="false" text="Fecha de Facturación" />
                                    <TableColumn fx:id="client_column" prefWidth="175.0" resizable="false" text="Cliente" />
                                    <TableColumn fx:id="billingaddress_column" prefWidth="300.0" resizable="false" text="Dirección de Facturación" />
                                    <TableColumn minWidth="0.0" prefWidth="100.0" resizable="false" text="F.O.B." />
                                    <TableColumn fx:id="pending_column" prefWidth="130.0" resizable="false" text="Estado" />
                                 </columns>
                                 <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </HBox.margin>
                              </TableView>
                           </children>
                        </HBox>
                     </content>
                  </Tab>
                  <Tab text="Detalles de Selección">
                     <content>
                        <VBox>
                           <children>
                              <HBox>
                                 <children>
                                    <TableView fx:id="invoiceitem_tableview">
                                       <columns>
                                          <TableColumn fx:id="departreportid_column" prefWidth="120.0" resizable="false" text="No. de Remisión" />
                                          <TableColumn fx:id="partnumber_column" prefWidth="120.0" resizable="false" text="Número de Parte" />
                                          <TableColumn fx:id="revision_column" prefWidth="75.0" resizable="false" text="Revisión" />
                                          <TableColumn fx:id="lotnumber_column" prefWidth="120.0" resizable="false" text="Número de Lote" />
                                          <TableColumn prefWidth="160.0" resizable="false" text="Cantidad">
                                             <columns>
                                                <TableColumn fx:id="lot_qty" prefWidth="75.0" resizable="false" text="Piezas" />
                                                <TableColumn fx:id="lot_boxqty_column" prefWidth="75.0" resizable="false" text="Cajas" />
                                             </columns>
                                          </TableColumn>
                                          <TableColumn fx:id="unitprice_column" prefWidth="100.0" resizable="false" text="Valor Unitario" />
                                          <TableColumn fx:id="lotprice_column" prefWidth="100.0" resizable="false" text="Precio Lote" />
                                          <TableColumn fx:id="comments_column" prefWidth="150.0" resizable="false" text="Comentarios" />
                                       </columns>
                                       <HBox.margin>
                                          <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                       </HBox.margin>
                                    </TableView>
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <HBox>
                                       <children>
                                          <VBox>
                                             <children>
                                                <HBox>
                                                   <children>
                                                      <VBox>
                                                         <children>
                                                            <Label text="Términos de pago:">
                                                               <VBox.margin>
                                                                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                               </VBox.margin>
                                                            </Label>
                                                            <TextField fx:id="terms_field" disable="true" editable="false">
                                                               <VBox.margin>
                                                                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                               </VBox.margin>
                                                            </TextField>
                                                         </children>
                                                      </VBox>
                                                      <VBox>
                                                         <children>
                                                            <Label text="Método de Envío:">
                                                               <VBox.margin>
                                                                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                               </VBox.margin>
                                                            </Label>
                                                            <TextField fx:id="shippingmethod_field" disable="true" editable="false">
                                                               <VBox.margin>
                                                                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                               </VBox.margin>
                                                            </TextField>
                                                         </children>
                                                      </VBox>
                                                   </children>
                                                </HBox>
                                             </children>
                                          </VBox>
                                          <VBox>
                                             <children>
                                                <Label text="F.O.B.:">
                                                   <VBox.margin>
                                                      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                   </VBox.margin>
                                                </Label>
                                                <HBox>
                                                   <children>
                                                      <TextField fx:id="fob_field" disable="true" editable="false">
                                                         <HBox.margin>
                                                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                         </HBox.margin>
                                                      </TextField>
                                                   </children>
                                                </HBox>
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    <VBox prefHeight="58.0" prefWidth="469.0">
                                       <children>
                                          <HBox alignment="TOP_RIGHT">
                                             <children>
                                                <VBox>
                                                   <children>
                                                      <Label text="Total:">
                                                         <VBox.margin>
                                                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                         </VBox.margin>
                                                      </Label>
                                                      <HBox alignment="CENTER_LEFT">
                                                         <children>
                                                            <Label text="\$">
                                                               <HBox.margin>
                                                                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                               </HBox.margin>
                                                            </Label>
                                                            <TextField fx:id="total_field" disable="true" editable="false" prefWidth="75.0">
                                                               <HBox.margin>
                                                                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                               </HBox.margin>
                                                            </TextField>
                                                            <Label text="USD">
                                                               <HBox.margin>
                                                                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                                               </HBox.margin>
                                                            </Label>
                                                         </children>
                                                      </HBox>
                                                   </children>
                                                </VBox>
                                             </children>
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
            <HBox>
               <children>
                  <Button fx:id="add_button" mnemonicParsing="false" text="Nueva Factura">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="pdf_button" disable="true" mnemonicParsing="false" text="Ver PDF">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
