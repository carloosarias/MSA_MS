<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root_hbox" alignment="CENTER" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OrderPurchaseFX">
   <children>
      <VBox alignment="CENTER_LEFT" fillWidth="false">
         <children>
            <VBox>
               <children>
                  <Label text="Historial de Ordenes:">
                     <VBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </Label>
                  <TableView fx:id="orderpurchase_tableview" prefHeight="433.0" prefWidth="532.0">
                     <columns>
                        <TableColumn fx:id="id_column" editable="false" minWidth="50.0" prefWidth="50.0" resizable="false" text="ID" />
                        <TableColumn fx:id="supplier_column" prefWidth="92.0" text="Proveedor" />
                        <TableColumn fx:id="description_column" editable="false" minWidth="150.0" prefWidth="175.0" resizable="false" text="Descripción" />
                        <TableColumn fx:id="orderdate_column" editable="false" minWidth="86.0" prefWidth="113.0" resizable="false" text="Fecha Expedición" />
                        <TableColumn fx:id="employee_column" prefWidth="101.0" text="Empleado" />
                     </columns>
                     <VBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </TableView>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Button fx:id="add_button" mnemonicParsing="false" text="Nueva Orden de Compra">
                           <HBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="details_button" mnemonicParsing="false" text="Ver Detalles de Selección" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
