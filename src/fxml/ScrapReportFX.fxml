<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root_hbox" alignment="CENTER" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ScrapReportFX">
   <children>
      <VBox alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <CheckBox fx:id="partnumber_checkbox" mnemonicParsing="false" selected="true" text="Filtrar por No. de Parte">
                           <VBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </VBox.margin>
                        </CheckBox>
                        <HBox>
                           <children>
                              <Label text="Selección:">
                                 <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </HBox.margin>
                              </Label>
                              <ComboBox fx:id="partnumber_combo" prefWidth="150.0">
                                 <HBox.margin>
                                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                 </HBox.margin>
                              </ComboBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <TableView fx:id="scrapreport_tableview" editable="true">
                           <columns>
                              <TableColumn fx:id="id_column" prefWidth="96.0" text="No. de Reporte" />
                              <TableColumn fx:id="employee_column" prefWidth="79.0" text="Empleado" />
                              <TableColumn fx:id="reportdate_column" prefWidth="121.0" text="Fecha de Reporte" />
                              <TableColumn fx:id="partnumber_column" prefWidth="92.0" text="No. de Parte" />
                              <TableColumn fx:id="revision_column" prefWidth="84.0" text="Revisión" />
                              <TableColumn fx:id="lotnumber_column" prefWidth="78.0" text="No. de Lote" />
                              <TableColumn fx:id="quantity_column" prefWidth="77.0" text="Cantidad" />
                              <TableColumn fx:id="comments_column" prefWidth="100.0" text="Comentarios" />
                           </columns>
                           <VBox.margin>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </VBox.margin>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="add_button" mnemonicParsing="false" text="Nuevo Reporte de Scrap">
                     <HBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
